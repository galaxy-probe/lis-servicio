    
<Window x:Class="LisServicioUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WsPrint Controller" Height="650" Width="980">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controles servicio -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Width="120" Margin="0,0,8,0" Content="Iniciar" Click="BtnStart_Click"/>
            <Button Width="120" Margin="0,0,8,0" Content="Detener" Click="BtnStop_Click"/>
            <Button Width="120" Margin="0,0,8,0" Content="Reiniciar" Click="BtnRestart_Click"/>
            <TextBlock Margin="20,0,0,0" VerticalAlignment="Center" Text="Estado:"/>
            <TextBlock x:Name="TxtStatus" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <!-- Impresoras -->
        <GroupBox Header="Configuración de impresoras" Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Impresora normal:"/>
                <ComboBox x:Name="CmbNormal" Grid.Row="0" Grid.Column="1" Height="28" Margin="8,0,0,0"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Impresora Zebra:" Margin="0,8,0,0"/>
                <ComboBox x:Name="CmbZebra" Grid.Row="1" Grid.Column="1" Height="28" Margin="8,8,0,0"/>

                <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Margin="10,0,0,0"
                        Content="Guardar" Click="BtnSave_Click"/>
            </Grid>
        </GroupBox>

        <!-- Consola -->
        <GroupBox Header="Consola (log)" Grid.Row="2">
            <TextBox x:Name="TxtConsole"
                     FontFamily="Consolas"
                     FontSize="12"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AcceptsReturn="True"/>
        </GroupBox>
    </Grid>
</Window>
